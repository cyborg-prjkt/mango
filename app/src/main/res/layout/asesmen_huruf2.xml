<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/barAtas"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:elevation="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetStart="16dp"
        app:contentInsetEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolBar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Asesmen Huruf"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvPageNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2/2"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerThickness="1dp"
        app:dividerColor="@color/black"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@id/barAtas"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Centang Dari Huruf yang Diminta"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/score_and_question_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/txtscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:textSize="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtsoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carilah huruf ..."
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Huruf C dan L -->
    <TextView
        android:id="@+id/tvC"
        style="@style/LetterBox"
        android:text="C"
        app:layout_constraintTop_toBottomOf="@id/score_and_question_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cbC"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="32dp"/>

    <CheckBox
        android:id="@+id/cbC"
        style="@style/CheckBoxStyle"
        app:layout_constraintTop_toTopOf="@id/tvC"
        app:layout_constraintStart_toEndOf="@id/tvC"
        app:layout_constraintEnd_toStartOf="@id/tvL"
        android:layout_marginStart="8dp"
        android:scaleX="1.5"
        android:scaleY="1.5"/>

    <TextView
        android:id="@+id/tvL"
        style="@style/LetterBox"
        android:text="L"
        app:layout_constraintTop_toTopOf="@id/tvC"
        app:layout_constraintStart_toEndOf="@id/cbC"
        app:layout_constraintEnd_toStartOf="@id/cbL"
        android:layout_marginStart="32dp"/>

    <CheckBox
        android:id="@+id/cbL"
        style="@style/CheckBoxStyle"
        app:layout_constraintTop_toTopOf="@id/tvL"
        app:layout_constraintStart_toEndOf="@id/tvL"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:scaleX="1.5"
        android:scaleY="1.5"/>

    <!-- Huruf X dan Z -->
    <TextView
        android:id="@+id/tvX"
        style="@style/LetterBox"
        android:text="X"
        app:layout_constraintTop_toBottomOf="@id/tvC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cbX"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="16dp"/>

    <CheckBox
        android:id="@+id/cbX"
        style="@style/CheckBoxStyle"
        app:layout_constraintTop_toTopOf="@id/tvX"
        app:layout_constraintStart_toEndOf="@id/tvX"
        app:layout_constraintEnd_toStartOf="@id/tvZ"
        android:layout_marginStart="8dp"
        android:scaleX="1.5"
        android:scaleY="1.5"/>

    <TextView
        android:id="@+id/tvZ"
        style="@style/LetterBox"
        android:text="Z"
        app:layout_constraintTop_toTopOf="@id/tvX"
        app:layout_constraintStart_toEndOf="@id/cbX"
        app:layout_constraintEnd_toStartOf="@id/cbZ"
        android:layout_marginStart="32dp"/>

    <CheckBox
        android:id="@+id/cbZ"
        style="@style/CheckBoxStyle"
        app:layout_constraintTop_toTopOf="@id/tvZ"
        app:layout_constraintStart_toEndOf="@id/tvZ"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:scaleX="1.5"
        android:scaleY="1.5"/>

    <!-- Huruf Q dan F -->
    <TextView
        android:id="@+id/tvQ"
        style="@style/LetterBox"
        android:text="Q"
        app:layout_constraintTop_toBottomOf="@id/tvX"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cbQ"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="16dp"/>

    <CheckBox
        android:id="@+id/cbQ"
        style="@style/CheckBoxStyle"
        app:layout_constraintTop_toTopOf="@id/tvQ"
        app:layout_constraintStart_toEndOf="@id/tvQ"
        app:layout_constraintEnd_toStartOf="@id/tvF"
        android:layout_marginStart="8dp"
        android:scaleX="1.5"
        android:scaleY="1.5"/>

    <TextView
        android:id="@+id/tvF"
        style="@style/LetterBox"
        android:text="F"
        app:layout_constraintTop_toTopOf="@id/tvQ"
        app:layout_constraintStart_toEndOf="@id/cbQ"
        app:layout_constraintEnd_toStartOf="@id/cbF"
        android:layout_marginStart="32dp"/>

    <CheckBox
        android:id="@+id/cbF"
        style="@style/CheckBoxStyle"
        app:layout_constraintTop_toTopOf="@id/tvF"
        app:layout_constraintStart_toEndOf="@id/tvF"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:scaleX="1.5"
        android:scaleY="1.5"/>

    <!-- Huruf Y (Baris Tunggal) -->
    <TextView
        android:id="@+id/tvY"
        style="@style/LetterBox"
        android:text="Y"
        app:layout_constraintTop_toBottomOf="@id/tvQ"
        android:layout_marginTop="16dp"

        app:layout_constraintStart_toStartOf="@id/tvQ"
        app:layout_constraintEnd_toStartOf="@id/cbY"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <CheckBox
        android:id="@+id/cbY"
        style="@style/CheckBoxStyle"
        app:layout_constraintTop_toTopOf="@id/tvY"
        app:layout_constraintStart_toEndOf="@id/tvY"
        app:layout_constraintEnd_toEndOf="@id/cbQ"
        android:layout_marginStart="8dp"
        android:scaleX="1.5"
        android:scaleY="1.5"/>

    <!-- Huruf N (Baris Tunggal) -->
    <TextView
        android:id="@+id/tvN"
        style="@style/LetterBox"
        android:text="N"
        app:layout_constraintTop_toBottomOf="@id/tvF"
        app:layout_constraintStart_toStartOf="@id/tvF"
        app:layout_constraintEnd_toStartOf="@id/cbN"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="16dp"/>

    <CheckBox
        android:id="@+id/cbN"
        style="@style/CheckBoxStyle"
        app:layout_constraintTop_toTopOf="@id/tvN"
        app:layout_constraintStart_toEndOf="@id/tvN"
        app:layout_constraintEnd_toEndOf="@id/cbF"
        android:layout_marginStart="8dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/acak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ACAK"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/tvN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="next"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/acak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>